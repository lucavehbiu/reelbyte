{
  "manifest_version": 3,
  "name": "DealHawk - Lego Arbitrage Alerts",
  "version": "1.0.0",
  "description": "Real-time alerts for profitable Lego set arbitrage opportunities. Track retiring sets and find deals across retailers.",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://www.lego.com/*",
    "https://www.amazon.com/*",
    "https://www.walmart.com/*",
    "https://www.target.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
